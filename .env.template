# API Keys Configuration
# All credentials are now managed through environment variables instead of credential files

# Google API Keys
GEMINI_API_KEY=your_gemini_api_key

# Blogger API Configuration
BLOGGER_ID=your_blogger_id
BLOGGER_CLIENT_ID=your_blogger_client_id
BLOGGER_CLIENT_SECRET=your_blogger_client_secret
BLOGGER_REFRESH_TOKEN=your_blogger_refresh_token

# Twitter API Keys
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# News API Key
NEWS_API_KEY=your_news_api_key

# Google Analytics (GA4)
GA_MEASUREMENT_ID=your_ga4_measurement_id  # Format: G-XXXXXXXXXX
GA_PROPERTY_ID=your_property_id            # Numeric ID
GA_CLIENT_EMAIL=your_client_email          # From service account
GA_PRIVATE_KEY=your_private_key            # From service account (with newlines as \n)
GA_PROJECT_ID=your_project_id              # From service account
GA_PRIVATE_KEY_ID=your_private_key_id      # From service account
GA_CLIENT_ID=your_client_id                # From service account

# Automation Settings
POSTS_PER_DAY=1
MIN_HOURS_BETWEEN_POSTS=8
MIN_SEO_SCORE=70

# Image Generation Settings
IMAGE_MODEL=stabilityai/stable-diffusion-xl-base-1.0
